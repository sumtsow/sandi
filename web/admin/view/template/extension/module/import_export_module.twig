{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1 class="h1">{{ heading_title }}</h1><br />
            <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
    {% if error_warning %}
        <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    {% endif %}
    <div class="container-fluid">
    {% if success %}
        <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    {% endif %}
    
    <div class="panel panel-default">
        
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-toggle-down"></i> {{ text_action }}</h3>
        </div>
        
        <div class="panel-body">

            <ul class="nav nav-tabs">
                <li class="{{ import }}"><a href="#tab-import" data-toggle="tab">{{ tab_import }}</a></li>                
                <li class="{{ export }}"><a href="#tab-export" data-toggle="tab">{{ tab_export }}</a></li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane {{ import }}" id="tab-import">
                    <form method="post" enctype="multipart/form-data" id="form-url" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-url">{{ entry_URL }}</label>
                            <div class="col-sm-9">
                                <input type="url" name="url" value="https://b2b-sandi.com.ua/export_xml/33b12f231c25a280385fe1db9e5f30c5" placeholder="{{ entry_URL }}" id="input-url" class="form-control" />
                                {% if error_url %}
                                <div class="text-danger">{{ error_url }} {{ error_XML }}</div>
                                {% endif %}
                            </div>
                            <div class="col justify-content-end pt-3 pl-3">
                                <a data-toggle="modal" data-target="#Modal" class="btn btn-primary float-right text-light" title="Import" >Import</a>
                            </div>
                        </div>
                    </form>
                </div>
                            
                <div class="tab-pane {{ export }}" id="tab-export">
                    <form method="post" enctype="multipart/form-data" id="form-save" class="form-horizontal">
                        <div class="form-group">
                            {% if error_save %}
                            <div class="text-danger">{{ error_save }}</div>
                            {% endif %}
                            <label class="col-sm-2 control-label" for="button-export">{{ entry_export }}</label>
                            <input type="submit" id="button-export" form="form-save" name="save" class="btn btn-primary" value="{{ entry_save }}" />
                        </div>
                    </form>
                        <textarea class="form-control" rows="15">{{ xml }}</textarea>
                </div>
            </div>
        </div>
    </div>
</div>
                
<div class="modal" id="Modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ modal_caution }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="{{ modal_close }}">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>{{ modal_confirm }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">{{ modal_cancel }}</button>
                <button form="form-url" type="button" class="btn btn-danger" onclick="this.form.submit();">{{ modal_agree }}</button>
            </div>
        </div>
    </div>
</div>

</div>
{{ footer }}
